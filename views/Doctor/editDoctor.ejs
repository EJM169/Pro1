                                        <h2>EDIT <%=currentUser.username %></h2>
                                    </div>
                                </div>
                                <div class="p-3 bg-light text-dark profile">
                                    <form action="/doctor/<%=currentUser._id%>/profile?_method=PUT" method="post">
                                        
                                        <div class="form-group">
                                            <input type="text" class="form-control" name="newDocor[username]" value="<%=currentUser.username%>" required="required">
