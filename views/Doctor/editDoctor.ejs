                                        <div class="form-group">
                                                <input type="email" class="form-control" name="newDoctor[email]" value="<%=currentUser.email%>" required="required">
                                        </div>
                                        <div class="form-group">
                                            <input type="number" class="form-control" name="newDoctor[mobile]" value="<%=currentUser.mobile%>" required="required">
                                        </div>
                                        
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                                        </div>
                            
                                   </form>
                                </div>
                            </div>
                </div>
            </div>
