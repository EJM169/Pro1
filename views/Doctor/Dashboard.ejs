    <!-- Page Content -->
    <div id="page-content-wrapper">
        <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
            <span class="hamb-top"></span>
            <span class="hamb-middle"></span>
            <span class="hamb-bottom"></span>
        </button>
        
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                    <div class="well">
                            <h3>Online Users</h3>
                            <ul class="list-group" id="users"></ul>
                          </div>
            </div>
            <div class="col-md-8">
                    <header class="jumbotron">
                            <div class="container">
                                <h1>Welcome <span id="doctorName"><%=currentUser.username %></span></h1>
                                <p>Your patients are waiting</p> 
                                <p>Ask your Patients to vist you at  <a type="button" href="http://www.instadoc.me/<%=currentUser.userid%>">www.instadoc.me/<%=currentUser.userid%></a></p>
