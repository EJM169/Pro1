<% include ../partials/doctorHeader %>
<div id="wrapper">
    <div class="overlay"></div>

    <!-- Sidebar -->
    <nav class="navbar navbar-dark fixed-top" id="sidebar-wrapper" role="navigation">
        <ul class="nav sidebar-nav">
            <li class="sidebar-brand">
                <a href="/">
                   InstaDoc
                </a>
            </li>
            <li>
                <a href="/doctor/dashboard">Dashboard</a>
            </li>
            <li  class="active-li">
                <a href="/doctor/<%=currentUser._id%>/Profile">Profile</a>
            </li>
            <li>
                <a href="#">Waiting Room</a>
            </li>
            <li>
                <a href="#">Help</a>
            </li>
            <li>
                <a href="#">Contact</a>
            </li>
            <li>
                <a href="#">Delete Account</a>
            </li>
            <li>
                <a href="/doctor/logout">Logout</a>
            </li>
        </ul>
    </nav>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
            <span class="hamb-top"></span>
            <span class="hamb-middle"></span>
            <span class="hamb-bottom"></span>
        </button>
        <div class = "jumbotron-fluid pr-d">
                <div class="container-fluid ">
                        
                               
                        <div class="border border-dark rounded ">
                                <div class="bg-primary d-flex text-white d-block   border-bottom">
                                    <div class="text-left p-2">
                                        <h2>PROFILE</h2>
                                    </div>
                                    <div class="p-3">
                                        <span ><a href="/doctor/<%= currentUser._id  %>/edit"><i class="far fa-edit"></i>Edit</a></span>
                                    </div>
                                </div>
                                <div class="p-3 bg-light text-dark profile">
                                        <p>Name: <%=currentUser.username %></p>
                                        <p>Mobile No.: <%=currentUser.mobile%></p>
                                        <p>Room Name: <%=currentUser.userid%></p>
                                        <p>Email: <%=currentUser.email%></p>
                                        <p>Join Date: <%=currentUser.dateOfJoin.toDateString()%></p>
                                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete Account</button>
                                            <!-- Modal -->
                                                <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete?</h5>
                                                        <button class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Once you delete your account you won't be able to recover it.
                                                        </div>
                                                        <div class="modal-footer">
                                                        <button class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <form action="/doctor/<%=currentUser._id%>?_method=DELETE" method="POST">
                                                            <button class="btn btn-danger">Delete</button>
                                                        </form>
                                                        </div>
                                                    </div>
                                                    </div>
                                                </div>
                                </div>
                            </div>
                </div>
            </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->

<% include ../partials/doctorFooter %>